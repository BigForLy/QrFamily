CREATE TABLE tCard (
id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
name TEXT NOT NULL,
qr BLOB NOT NULL,
position INTEGER DEFAULT NULL
);

selectAll:
SELECT * FROM tCard;

selectById:
SELECT * FROM tCard WHERE id = ?;

selectByName:
SELECT * FROM tCard WHERE name = ?;

insertCard:
INSERT OR IGNORE INTO tCard(name, qr)
VALUES (?,?);

deleteById:
DELETE FROM tCard WHERE id = ?;

deleteAll:
DELETE FROM tCard;